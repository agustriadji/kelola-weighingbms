{
  "name": "wbms",
  "version": "0.1.0",
  "description": "Web Based Monitoring System",
  "author": "agus.triadji@gmail.com",
  "private": true,
  "scripts": {
    "clean:dist": "rmdir /s /q dist 2>nul || rm -rf dist 2>/dev/null || true",
    "dev": "npm run build:typeorm && npm run migration:run && next dev",
    "build": "next build",
    "start": "npm run migration:run && next start",
    "lint": "next lint",
    "build:typeorm": "node scripts/build-typeorm.js",
    "typeorm": "node ./node_modules/typeorm/cli.js",
    "migration:run": "npm run build:typeorm && node ./node_modules/typeorm/cli.js migration:run -d dist/database/typeorm.config.js",
    "migration:revert": "npm run build:typeorm && npm run typeorm migration:revert -d dist/database/typeorm.config.js",
    "migration:create": "npm run build:typeorm && npm run typeorm migration:create",
    "migration:generate": "npm run build:typeorm && npm run typeorm migration:generate -d dist/database/typeorm.config.js src/database/migrations/AutoGen",
    "seed": "node scripts/seed.js",
    "db:setup": "npm run build:typeorm && npm run migration:run && npm run seed",
    "cron": "NODE_ENV=development ENABLE_SAP_CRON=true node worker.js",
    "start:cron": "ENABLE_SAP_CRON=true node worker.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run cron\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "dotenv": "^16.6.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.474.0",
    "next": "14.2.22",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "radix-ui": "^1.1.2",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.67.0",
    "react-markdown": "^10.1.0",
    "reflect-metadata": "^0.2.2",
    "remark-gfm": "^4.0.1",
    "typeorm": "^0.3.27",
    "zod": "^3.25.76",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.22",
    "ignore-loader": "^0.1.2",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typeorm-ts-node-commonjs": "^0.3.20",
    "typescript": "^5.6.3",
    "webpack-bundle-analyzer": "^5.0.1"
  }
}
